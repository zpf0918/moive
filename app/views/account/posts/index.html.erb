<div class="col-md-12">

  <h2 class="text-center"> 我发表的评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 影名 </th>
        <th> 评论 </th>
        <th> 最后更新</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= post.content %> </td>
        <td> <%= post.film.title %> </td>
        <td> <%= post.updated_at %> </td>
        <td> <%= link_to('编辑', edit_film_post_path(post.film, post), class: "btn btn-default btn-xs") %> </td>
        <td> <%= link_to('删除', film_posts_path(post.film, post), method: :delete, data: { confirm:"你确定吗"}, class: "btn btn-default btn-xs") %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
