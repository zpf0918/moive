<div class="col-md-4 col-md-offset-4">
  <h2>新增电影名</h2>

  <hr>
  <%= form_for @film do |f| %>

  <%if @film.errors.any? %>
  <ul>
    <% @film.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>


  影名
  <%= f.text_field :title %>
  <br>
  叙述
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "Submit", :disable_with => 'Submiting...' %>
  <% end %>
</div>
